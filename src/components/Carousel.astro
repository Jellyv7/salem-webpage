---
import { Image } from "astro:assets";
import {
	gallery1,
	gallery2,
	gallery3,
	gallery4,
	gallery5,
	gallery6,
	gallery7,
	gallery8,
	gallery9,
} from "../assets/index.js";
import "swiper/css/bundle";

const galleryImages = [
	gallery1,
	gallery2,
	gallery3,
	gallery4,
	gallery5,
	gallery6,
	gallery7,
	gallery8,
	gallery9,
];
---

<div class="swiper">
	<div class="swiper-wrapper" id="swiper-slider">
		{
			galleryImages.map((elem) => {
				return (
					<a
						class="swiper-slide"
						href={elem.src}
						data-pswp-width={elem.width}
						data-pswp-height={elem.height}
						target="_blank"
						data-cropped="true"
					>
						<Image src={elem} alt="ok" />
					</a>
				);
			})
		}
	</div>
	<div class="swiper-scrollbar"></div>
</div>

<script>
	import Swiper from "swiper";
	import { Navigation, Scrollbar } from "swiper/modules";
	import "swiper/css/navigation";
	const swiper = new Swiper(".swiper", {
		modules: [Navigation, Scrollbar],
		loop: true,
		slidesPerView: "auto",
		spaceBetween: 20,
		centeredSlides: true,
		scrollbar: {
			el: ".swiper-scrollbar",
			draggable: true,
		},
	});

	import PhotoSwipeLightbox from "photoswipe/lightbox";
	import "photoswipe/style.css";

	const lightbox = new PhotoSwipeLightbox({
		gallery: "#swiper-slider",
		children: "a",
		pswpModule: () => import("photoswipe"),
	});
	lightbox.init();
</script>

<style>
	.swiper-slide {
		height: 300px;
		overflow: hidden;
		margin-right: unset;
		margin-block: 3em;
		width: 70%;
	}

	.swiper {
		background: rgb(246, 246, 246);
		background: linear-gradient(
			90deg,
			rgba(246, 246, 246, 0) 95%,
			rgba(246, 246, 246, 1) 100%
		);
		mask-image: linear-gradient(to left, transparent, #000000 20%);
	}

	.swiper-slide > img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 5px;
		position: relative;
	}

	.swiper-scrollbar {
		margin-bottom: 1em;
	}
</style>
