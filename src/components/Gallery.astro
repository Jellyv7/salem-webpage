---
import { Image } from 'astro:assets';
import { gallery1, gallery2, gallery3, gallery4, gallery5, gallery6, gallery7, gallery8, gallery9 } from '../assets/index.js';

const galleryImages = [
	gallery1,
	gallery2,
	gallery3,
	gallery4,
	gallery5,
	gallery6,
	gallery7,
	gallery8,
	gallery9
]
---

<section>
	<ul>
		{
			galleryImages.map(elem => {
				return (
					<li>
						<Image src={ elem } alt='ok'/>
					</li>
				)
			})
		}
	</ul>
</section>

<style>
	ul {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		grid-gap: 1.2em;
		margin: 4em;
		width: fit-content;
	}

	li {
		display: flex;
		align-items: end;
		justify-content: center;
	}

	li > img {
		width: 100%;
		min-height: 100%;
		object-fit: cover;
		transition: scale .3s ease, filter .3s ease;
		filter:  brightness(1.2) contrast(0.9);
	}

	li > img:hover {
		scale: 1.05;
		filter: unset;
	}

</style>