---
import { Image } from 'astro:assets';
import Carousel from '@components/Carousel.astro';
import { gallery1, gallery2, gallery3, gallery4, gallery5, gallery6, gallery7, gallery8, gallery9 } from '../assets/index.js';

const galleryImages = [
	gallery1,
	gallery2,
	gallery3,
	gallery4,
	gallery5,
	gallery6,
	gallery7,
	gallery8,
	gallery9
]
---

<section class="web__version">
	<ul>
		{
			galleryImages.map(elem => {
				return (
					<li>
						<Image src={ elem } alt='ok'/>
					</li>
				)
			})
		}
	</ul>
</section>

<section class="mobile__version">
	<Carousel />
</section>

<style>
	section {
		background-color: var(--white-clean);
	}

	section.mobile__version {
		display: none;
	}

	ul {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		grid-gap: 2.5em;
		margin: 2em;
		width: fit-content;
	}

	li {
		display: flex;
		align-items: end;
		justify-content: center;
	}

	li > img {
		width: 100%;
		min-height: 100%;
		object-fit: cover;
		transition: scale .3s ease, filter .3s ease;
		filter:  brightness(1.2) contrast(0.9);
	}

	li > img:hover {
		scale: 1.1;
		filter: unset;
	}

	@media (width <= 700px) {
		main {
			gap: unset;
		}

		section.web__version {
			display: none;
		}

		section.mobile__version {
			display: block;
		}
	}

</style>